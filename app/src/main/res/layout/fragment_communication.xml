<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/view_back_color"
    tools:context=".presentation.profil.message.CommunicationFragment">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="?actionBarSize"
       android:background="@color/toolbar_selected_color"
       android:text="Иван Иванов"
       android:id="@+id/comm_name_txt"
       android:textColor="@color/white"
       android:gravity="center"
       android:textSize="20dp"
       >
   </TextView>
    <LinearLayout
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_margin="10dp"
        >
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="290dp"
        android:layout_height="?actionBarSize"
        android:background="@drawable/base_background_green"
        android:textColor="@color/white"
        android:id="@+id/message_item_from_person_id"
        android:text="message"
        android:gravity="center|left"
        android:layout_gravity="left"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:textSize="20dp">
    </TextView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/communication_recycler_id"
        android:layout_weight="1">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/com_message_txt"
        android:hint="Введите сообщение"
        android:padding="10dp"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            android:layout_weight="4"
            android:id="@+id/com_message_btn"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            >

        </ImageButton>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>