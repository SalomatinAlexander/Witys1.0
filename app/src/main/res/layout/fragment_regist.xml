<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistFragment"
    android:background="@color/base_color"
    android:orientation="vertical"
    >
    <include
        layout="@layout/general_toolbar">

    </include>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:layout_weight="1"
      android:gravity="center">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:hint="Логин"
        android:id="@+id/login_edit_reg"
        android:padding="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/base_background"
        android:text="" />

    <EditText
        android:padding="15dp"
        android:id="@+id/pass_edit_reg"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:hint="Пароль"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/base_background"
        android:text=""
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/base_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/view_back_color"
        android:text="Подтвердить"
        android:id="@+id/enter_btn_reg"
        android:textColor="@color/black">

    </Button>
      <Button
          android:layout_width="120dp"
          android:layout_height="?actionBarSize"
          android:layout_marginLeft="20dp"
          android:textSize="10dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:backgroundTint="@color/second_color"
          android:text="Забыли?"
          android:id="@+id/unknow_btn_reg"
          android:textColor="@color/black">

      </Button>

  </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/base_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/registration_btn_reg"
        android:backgroundTint="@color/view_back_color"
        android:text="Регистрация"
        android:textColor="@color/black">

    </Button>

</LinearLayout>